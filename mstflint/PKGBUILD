# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs
pkgname=mstflint
pkgver=3.0
_subver=0.6
_commit=g6961daa
pkgrel=3
pkgdesc="Mellanox firmware burning application"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('bash' 'gcc-libs' 'zlib')
source=("https://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}-${_subver}.${_commit}.tar.gz")
# cksum start
md5sums=('8d37b9ee52d933c4ea603ebf6c081094')
sha512sums=('dff5905366c04cd3c224185482ccc126b2cf053a9420401c33d218cf39395a17a402d6cd9ee511cd64bd0a6ed36b4d74906f9527db7fa6351050e26fc8084ff6')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
