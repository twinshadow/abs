# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs
pkgname=librdmacm
pkgver=1.0.17.1
pkgrel=1
pkgdesc="Userspace RDMA Connection Manager"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibverbs')
optdepends=('ibacm: assistant communication manager')
source=("http://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('c41b18794b1b58065fed464a743e23b0')
sha512sums=('94f94c11b16fe3d7bb4a5631eac634b2c4c841562e0ee61247e45b12fd85f1a69e5f3c864bb9059c028a9a1faab66e213742ea79922efee640ff02286edb30fb')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
