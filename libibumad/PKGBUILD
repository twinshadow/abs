# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs
pkgname=libibumad
pkgver=1.3.8
pkgrel=1
pkgdesc="OpenFabrics Alliance InfiniBand umad (user MAD) library"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('glibc')
source=("http://www.openfabrics.org/downloads/management/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('dadad9caebc974d8c0cdd9131b117c16')
sha512sums=('0e5005746527ef6920c49a19720fd70e8acd3ce73d5a4ef2b0c438f26abdabbaa5a397e07b91fa433d60d012110fbb692be801145de8ed00b5f115f7daaefecd')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
